import javax.swing.JOptionPane;
import java.text.DecimalFormat;

public class Salario {
    public static void main(String[] args) {
        DecimalFormat df = new DecimalFormat("0.00");
        float salario, ajuste = 0, salarioReajustado, salarioReal;
        int percentualAjuste = 0;

        while (true) {
            String mensagem = "A seguir, voc√™ ver√° uma tabela sobre reajuste salarial:\n\n" +
                    "‚Üí At√© R$280,00:             aumento de 20%\n" +
                    "‚Üí De R$280,01 a R$700,00:   aumento de 15%\n" +
                    "‚Üí De R$700,01 a R$1500,00:  aumento de 10%\n" +
                    "‚Üí Acima de R$1500,00:       aumento de 5%\n\n" +
                    "Infla√ß√£o do per√≠odo: 3,8%\n";

            JOptionPane.showMessageDialog(null, mensagem, "Tabela de Reajuste", JOptionPane.INFORMATION_MESSAGE);

            String entrada = JOptionPane.showInputDialog(null, "Informe seu sal√°rio atual:", "Entrada de Dados", JOptionPane.QUESTION_MESSAGE);

            if (entrada == null) {
                JOptionPane.showMessageDialog(null, "Programa encerrado pelo usu√°rio.", "Encerrado", JOptionPane.WARNING_MESSAGE);
                return;
            }

            try {
                salario = Float.parseFloat(entrada.replace(",", "."));

                if (salario <= 0) {
                    JOptionPane.showMessageDialog(null, "Erro: o sal√°rio deve ser maior que zero.", "Entrada Inv√°lida", JOptionPane.ERROR_MESSAGE);
                    continue;
                }

                // Determina o percentual de ajuste
                if (salario <= 280) {
                    percentualAjuste = 20;
                    ajuste = 0.20f;
                } else if (salario <= 700) {
                    percentualAjuste = 15;
                    ajuste = 0.15f;
                } else if (salario <= 1500) {
                    percentualAjuste = 10;
                    ajuste = 0.10f;
                } else {
                    percentualAjuste = 5;
                    ajuste = 0.05f;
                }

                float valorAumento = salario * ajuste;
                salarioReajustado = salario + valorAumento;
                salarioReal = salarioReajustado - (salarioReajustado * 0.038f); // desconta infla√ß√£o

                String resultado = "Resumo do reajuste salarial:\n\n" +
                        "‚Üí Sal√°rio original: R$ " + df.format(salario) + "\n" +
                        "‚Üí Percentual de ajuste: " + percentualAjuste + "%\n" +
                        "‚Üí Valor do aumento: R$ " + df.format(valorAumento) + "\n" +
                        "‚Üí Novo sal√°rio com reajuste: R$ " + df.format(salarioReajustado) + "\n" +
                        "‚Üí Sal√°rio ajustado pela infla√ß√£o: R$ " + df.format(salarioReal);

                JOptionPane.showMessageDialog(null, resultado, "Resultado Completo", JOptionPane.INFORMATION_MESSAGE);

                // üëâ Nova janela adicional com sal√°rio final
                JOptionPane.showMessageDialog(
                        null,
                        "Seu novo sal√°rio com o reajuste √©: R$ " + df.format(salarioReajustado),
                        "Sal√°rio Final",
                        JOptionPane.INFORMATION_MESSAGE
                );

                break;

            } catch (NumberFormatException e) {
                JOptionPane.showMessageDialog(null, "Erro: por favor, insira um n√∫mero v√°lido (ex: 1500 ou 1500,00).", "Entrada Inv√°lida", JOptionPane.ERROR_MESSAGE);
            }
        }
    }
}
